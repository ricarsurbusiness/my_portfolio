---
import type { Project } from "../types/portfolio";
import ProjectPlaceholder from "./ProjectPlaceholder.astro";

// Definir la interfaz de Props
interface Props {
    project: Project;
}

// Extraer el proyecto de las props
const { project } = Astro.props;

// Verificar si la imagen existe (no es placeholder genérico)
const hasRealImage =
    project.imageUrl &&
    !project.imageUrl.includes("placeholder") &&
    !project.imageUrl.endsWith(".jpg");

// Determinar el enlace principal (prioridad: demo > github)
const mainLink = project.liveUrl || project.githubUrl || "#";
---

<article class="project-card" data-href={mainLink}>
    <div class="project-image">
        {
            hasRealImage ? (
                project.imageGallery && project.imageGallery.length > 1 ? (
                    <div class="carousel">
                        <div class="carousel-container">
                            {project.imageGallery.map((imgUrl, index) => (
                                <img
                                    src={imgUrl}
                                    alt={`${project.title} - imagen ${index + 1}`}
                                    class={`carousel-image ${index === 0 ? "active" : ""}`}
                                    data-index={index}
                                />
                            ))}
                        </div>
                        <button class="carousel-btn prev" data-carousel="prev">
                            ‹
                        </button>
                        <button class="carousel-btn next" data-carousel="next">
                            ›
                        </button>
                        <div class="carousel-indicators">
                            {project.imageGallery.map((_, index) => (
                                <button
                                    class={`indicator ${index === 0 ? "active" : ""}`}
                                    data-index={index}
                                />
                            ))}
                        </div>
                    </div>
                ) : (
                    <img src={project.imageUrl} alt={project.title} />
                )
            ) : (
                <ProjectPlaceholder project={project} />
            )
        }
    </div>

    <div class="project-content">
        <div class="project-header">
            <h3>{project.title}</h3>
            {project.featured && <span class="badge-featured">Destacado</span>}
        </div>

        <p class="project-description">{project.description}</p>

        <div class="project-categories">
            {
                project.categories.map((category) => (
                    <span class="category-tag">{category}</span>
                ))
            }
        </div>

        <div class="project-tech">
            {
                project.technologies
                    .slice(0, 5)
                    .map((tech) => <span class="tech-badge">{tech}</span>)
            }
            {
                project.technologies.length > 5 && (
                    <span class="tech-badge">
                        +{project.technologies.length - 5}
                    </span>
                )
            }
        </div>
    </div>
</article>

<style>
    .project-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .project-card:hover {
        transform: translateY(-8px);
        border-color: rgba(0, 255, 136, 0.3);
        box-shadow: 0 8px 32px rgba(0, 255, 136, 0.2);
    }

    .project-card:active {
        transform: translateY(-4px);
    }

    .project-image {
        position: relative;
        width: 100%;
        height: 240px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        overflow: hidden;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .project-card:hover .project-image img {
        transform: scale(1.1);
    }

    /* Carousel Styles */
    .carousel {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .carousel-container {
        width: 100%;
        height: 100%;
        position: relative;
    }

    .carousel-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }

    .carousel-image.active {
        opacity: 1;
    }

    .carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        font-size: 2rem;
        padding: 0.5rem 1rem;
        cursor: pointer;
        z-index: 2;
        transition: all 0.3s ease;
        opacity: 0;
    }

    .project-card:hover .carousel-btn {
        opacity: 1;
    }

    .carousel-btn:hover {
        background: rgba(0, 255, 136, 0.8);
        color: #0a0a14;
    }

    .carousel-btn.prev {
        left: 0.5rem;
    }

    .carousel-btn.next {
        right: 0.5rem;
    }

    .carousel-indicators {
        position: absolute;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.5rem;
        z-index: 2;
    }

    .indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        border: 2px solid white;
        background: rgba(255, 255, 255, 0.3);
        cursor: pointer;
        padding: 0;
        transition: all 0.3s ease;
    }

    .indicator.active {
        background: #00ff88;
        border-color: #00ff88;
    }

    .indicator:hover {
        background: rgba(255, 255, 255, 0.6);
    }

    .project-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 0.75rem;
    }

    h3 {
        color: #fff;
        font-size: 1.25rem;
        margin: 0;
        line-height: 1.3;
    }

    .badge-featured {
        background: linear-gradient(135deg, #00ff88, #00cc6a);
        color: #0a0a14;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .project-description {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .project-categories {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .category-tag {
        background: rgba(0, 255, 136, 0.1);
        color: #00ff88;
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.75rem;
        border: 1px solid rgba(0, 255, 136, 0.2);
    }

    .project-tech {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: auto;
    }

    .tech-badge {
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.8);
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const cards = document.querySelectorAll(".project-card");

        cards.forEach((card) => {
            // Hacer la tarjeta clickeable
            const href = card.getAttribute("data-href");
            if (href && href !== "#") {
                card.addEventListener("click", (e) => {
                    // Solo si no se clickeó un botón de carrusel
                    const target = e.target as HTMLElement;
                    if (
                        !target.closest(".carousel-btn") &&
                        !target.closest(".indicator")
                    ) {
                        window.open(href, "_blank");
                    }
                });
            }

            // Carrusel
            const carousel = card.querySelector(".carousel");
            if (!carousel) return;

            const images = carousel.querySelectorAll(".carousel-image");
            const indicators = carousel.querySelectorAll(".indicator");
            const prevBtn = carousel.querySelector('[data-carousel="prev"]');
            const nextBtn = carousel.querySelector('[data-carousel="next"]');

            let currentIndex = 0;

            function showImage(index: number) {
                images.forEach((img, i) => {
                    img.classList.toggle("active", i === index);
                });
                indicators.forEach((ind, i) => {
                    ind.classList.toggle("active", i === index);
                });
                currentIndex = index;
            }

            prevBtn?.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();
                const newIndex =
                    currentIndex === 0 ? images.length - 1 : currentIndex - 1;
                showImage(newIndex);
            });

            nextBtn?.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();
                const newIndex =
                    currentIndex === images.length - 1 ? 0 : currentIndex + 1;
                showImage(newIndex);
            });

            indicators.forEach((indicator, index) => {
                indicator.addEventListener("click", (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    showImage(index);
                });
            });
        });
    });
</script>
