---
const currentYear = new Date().getFullYear();

const socialLinks = [
    {
        name: "GitHub",
        url: "https://github.com/ricarsurbusiness",
        icon: "github",
    },
    {
        name: "LinkedIn",
        url: "https://www.linkedin.com/in/ricarsur/",
        icon: "linkedin",
    },
    { name: "Email", url: "mailto:ricarsurbusiness@gmail.com", icon: "email" },
];
---

<footer>
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ricardo Suárez</h3>
                <p>
                    Full Stack Developer apasionado por crear soluciones
                    escalables
                </p>
            </div>

            <div class="footer-section">
                <h4>Navegación</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/projects">Proyectos</a></li>
                    <li><a href="/about">Sobre mí</a></li>
                    <li><a href="/cv">CV</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h4>Contacto</h4>
                <div class="social-links">
                    {
                        socialLinks.map((social) => (
                            <a
                                href={social.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label={social.name}
                            >
                                {social.icon === "github" && "GitHub"}
                                {social.icon === "linkedin" && "LinkedIn"}
                                {social.icon === "email" && "Email"}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>
                © {currentYear} Ricardo Suárez. Hecho con <span class="heart"
                    >♥</span
                > y Astro
            </p>
        </div>
    </div>
</footer>

<style>
    footer {
        background: linear-gradient(
            180deg,
            rgba(10, 10, 20, 0) 0%,
            #0a0a14 100%
        );
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-top: 4rem;
        padding: 3rem 0 1rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer-section h3 {
        color: #00ff88;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .footer-section h4 {
        color: #fff;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .footer-section p {
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.6;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section ul li {
        margin-bottom: 0.5rem;
    }

    .footer-section ul a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: color 0.3s;
    }

    .footer-section ul a:hover {
        color: #00ff88;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .social-links a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        padding: 0.5rem 1rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 4px;
        transition: all 0.3s;
    }

    .social-links a:hover {
        color: #00ff88;
        border-color: #00ff88;
        background: rgba(0, 255, 136, 0.1);
    }

    .footer-bottom {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.5);
    }

    .heart {
        color: #ff0055;
        animation: heartbeat 1.5s ease-in-out infinite;
    }

    @keyframes heartbeat {
        0%,
        100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
        }
    }
</style>
