<style>
    .cv-page {
        padding: 6rem 0 4rem;
        min-height: 100vh;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* CV Header */
    .cv-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid rgba(0, 255, 136, 0.2);
    }

    .cv-title h1 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #fff, #00ff88);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .cv-title p {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.3rem;
    }

    .btn-download {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        background: #00ff88;
        color: #0a0a14;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-download:hover {
        background: #00cc6a;
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 255, 136, 0.3);
    }

    .download-icon {
        font-size: 1.2rem;
    }

    /* Personal Info */
    .personal-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
        margin-bottom: 3rem;
    }

    .info-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .info-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(0, 255, 136, 0.3);
    }

    .info-icon {
        font-size: 1.5rem;
    }

    .info-content {
        display: flex;
        flex-direction: column;
        min-width: 0;
        flex: 1;
    }

    .info-label {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .info-value {
        color: #fff;
        font-size: 0.9rem;
        font-weight: 500;
        word-break: break-word;
        overflow-wrap: break-word;
    }

    .info-link {
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .info-link:hover {
        color: #00ff88;
    }

    /* Sections */
    .section {
        margin-bottom: 4rem;
    }

    .section-title {
        font-size: 2rem;
        color: #fff;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-icon {
        font-size: 2rem;
    }

    /* Summary Section */
    .summary-section {
        padding: 2rem;
        background: linear-gradient(
            135deg,
            rgba(0, 255, 136, 0.05),
            rgba(0, 255, 136, 0.02)
        );
        border: 1px solid rgba(0, 255, 136, 0.1);
        border-radius: 12px;
    }

    .summary-text {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
        line-height: 1.8;
        margin: 0;
    }

    /* Experience Section */
    .timeline {
        position: relative;
    }

    /* Education Section */
    .education-grid {
        display: grid;
        gap: 1.5rem;
    }

    .education-card {
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none !important;
        display: block;
        color: inherit;
        position: relative;
    }

    .education-card * {
        text-decoration: none !important;
    }

    .education-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(0, 255, 136, 0.3);
    }

    .education-card.clickable {
        cursor: pointer;
    }

    .education-card.clickable:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(0, 255, 136, 0.5);
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 255, 136, 0.2);
    }

    .certificate-badge {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .certificate-badge span {
        color: #00ff88;
        font-size: 0.85rem;
        font-weight: 600;
        display: flex;
