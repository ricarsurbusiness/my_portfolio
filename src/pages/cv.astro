        margin: 0;
    }

    .education-period {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        white-space: nowrap;
    }

    .education-institution {
        color: #00ff88;
        font-size: 1rem;
        font-weight: 600;
