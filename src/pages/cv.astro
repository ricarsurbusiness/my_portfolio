    }

    .education-field {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.95rem;
        margin-bottom: 0.75rem;
    }

    .education-description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 0.5rem;
    }

    .education-location {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.85rem;
        margin: 0;
    }

    /* Skills Section */
    .skill-level-group {
        margin-bottom: 2.5rem;
    }

    .skill-level-group:last-child {
        margin-bottom: 0;
    }

    .skill-level-title {
        font-size: 1.25rem;
        color: #fff;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .level-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .level-badge.expert {
        background: linear-gradient(135deg, #00ff88, #00cc6a);
        color: #0a0a14;
    }

    .level-badge.advanced {
        background: rgba(0, 150, 255, 0.2);
        color: #0096ff;
        border: 1px solid rgba(0, 150, 255, 0.3);
    }

    .level-badge.intermediate {
        background: rgba(255, 193, 7, 0.2);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1rem;
    }

    /* Projects Highlight */
    .projects-highlight {
        padding: 2rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        text-align: center;
    }

    .projects-cta {
        color: rgba(255, 255, 255, 0.7);
        font-size: 1.1rem;
        margin: 0;
    }

    .link-highlight {
        color: #00ff88;
        text-decoration: none;
        font-weight: 600;
        border-bottom: 2px solid rgba(0, 255, 136, 0.3);
        transition: all 0.3s ease;
    }

    .link-highlight:hover {
        border-bottom-color: #00ff88;
    }

    /* Print Styles */
    @media print {
        .cv-page {
            padding: 0;
        }

        .btn-download {
            display: none;
        }

        .section {
            page-break-inside: avoid;
        }
    }

    /* Responsive */
    /* Soft Skills Section */
    .soft-skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .soft-skill-card {
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .soft-skill-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(0, 255, 136, 0.3);
        transform: translateY(-2px);
    }

    .soft-skill-card h4 {
        color: #00ff88;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .soft-skill-card p {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        line-height: 1.6;
        margin: 0;
    }

    /* Languages Section */
    .languages-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
    }

    .language-card {
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        transition: all 0.3s ease;
    }

    .language-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(0, 255, 136, 0.3);
    }

    .language-name {
        color: #fff;
        font-size: 1.2rem;
        font-weight: 600;
    }

    .language-level {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: capitalize;
        width: fit-content;
    }

    .language-level.nativo {
        background: linear-gradient(135deg, #00ff88, #00cc6a);
        color: #0a0a14;
    }

    .language-level.avanzado {
